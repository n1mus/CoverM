{
    "ver": "0.0.1",
    "authors": [
        "suminw"
    ],
    "contact": "",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": null
    },
    "parameters": [ 
        {
            "id": "genome_ref",
            "optional": false,
            "advanced": false,
            "allow_multiple": true,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": ["KBaseGenomes.ContigSet", "KBaseGenomeAnnotations.Assembly", "KBaseGenomes.Genome", "KBaseSets.GenomeSet", "KBaseSearch.GenomeSet", "KBaseSets.AssemblySet", "KBaseMetagenomes.BinnedContigs" ]
	    }
        },{
            "id": "mapping_ref",
            "optional": true,
            "advanced": false,
            "allow_multiple": true,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": ["KBaseSets.ReadsAlignmentSet"]
            }
 
        },{
            "id": "reads_ref",
            "optional": false,
            "advanced": false,
            "allow_multiple": true,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": ["KBaseFile.PairedEndLibrary", "KBaseAssembly.PairedEndLibrary", "KBaseFile.SingleEndLibrary", "KBaseAssembly.SingleEndLibrary", "KBaseSets.ReadsSet"]
            }
 
        },{
            "id": "mapper",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "minimap2-sr" ],
            "field_type": "dropdown",
            "dropdown_options": {
                "options": [
                    {
                        "value": "minimap2-sr",
                        "display": "minimap2-sr",
                        "id": "minimap2-sr",
                        "ui-name": "minimap2-sr"
                    },{
                        "value": "bwa-mem",
                        "display": "bwa-mem",
                        "id": "bwa-mem",
                        "ui-name": "bwa-mem"
                    }

                ]
        }
 
        }

    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "CoverM",
            "method": "run_CoverM",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },{
                    "narrative_system_variable": "workspace_id",
                    "target_property": "workspace_id"
                },{
                    "input_parameter": "genome_ref",
                    "target_property": "genome_ref",
		            "target_type_transform": "resolved-ref"
                },{
                    "input_parameter": "mapping_ref",
                    "target_property": "mapping_ref",
		            "target_type_transform": "resolved-ref"

                },{
                    "input_parameter": "reads_ref",
                    "target_property": "reads_ref",
		            "target_type_transform": "resolved-ref"

                },{
                    "input_parameter": "mapper",
                    "target_property": "mapper"
                }

            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },{
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
